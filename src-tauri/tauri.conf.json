{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "blunux-installer",
  "version": "0.1.0",
  "identifier": "com.jaewoo.blunux-installer",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Blunux Installer",
        "width": 900,
        "height": 680,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage"],
    "icon": ["icons/icon.png"]
  }
}

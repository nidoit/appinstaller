{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Blunux Installer",
  "version": "0.1.0",
  "identifier": "com.jaewoo.blunux-installer",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "windows": [
      {
        "title": "Blunux Installer",
        "width": 900,
        "height": 680,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  },
  "plugins": {
    "shell": {
      "all": false,
      "execute": true,
      "sidecar": false,
      "open": false,
      "commands": {
        "bash": {
          "name": "bash",
          "cmd": "bash",
          "args": true,
          "sidecar": false
        }
      }
    }
  }
}
